<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Asgard_Gym" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Eliminar ActionBar -->
        <item name="android:windowFullscreen">true</item>

        <!-- Colores personalizados de la app -->
        <item name="colorPrimary">@color/asgard_toolbar</item>
        <item name="colorPrimaryVariant">@color/asgard_toolbar</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Estilo personalizado para menÃº contextual -->
        <item name="popupMenuStyle">@style/CustomPopupMenu</item>

    </style>

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
        <item name="android:textColor">#4E342E</item>
    </style>
</resources>
